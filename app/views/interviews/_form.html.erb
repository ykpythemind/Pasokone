    <%= form.label :inteviewed_at %>
    <%= form.datetime_select :inteviewed_at, id: :interview_inteviewed_at %>
  </div>

  <div class="field">
    <%= form.label :staff_id %>
    <%= form.select :staff_id, @staffs.map { |p| [p.name, p.id] }, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :person_id %>
    <%= form.select :person_id, @people.map { |p| [p.name, p.id] }, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
